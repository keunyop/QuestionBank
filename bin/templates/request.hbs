<body>
    <header>
        <!-- Fixed navbar -->
        <div id="nav-placeholder"></di1v>
    </header>
    
    <!-- Begin page content -->
    <main role="main" class="container">
        <div id="main-div">
            <h1 class="mt-5">Request us new quiz</h1>
            <br>

            <div class="card shadow" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">
                        If Quizeey doesn't have a test you want, please request us. We will add right away.
                    </h5>
                    <br><br>

                    <form id="request-form">
                        <h4 class="mb-3">Test information</h4>
                        <div class="form-row">
                            <div class="col mb-3">
                                <label for="testName">Test name</label>
                                <input type="text" class="form-control" id="testName" placeholder="Test name" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col mb-3">
                                <label for="questUrl">Question url <span class="text-muted">(Optional)</span></label>
                                <input type="text" class="form-control" id="questUrl" placeholder="Question url">
                                <small id="questUrlHelp" class="form-text text-muted">Url for the test questions.</small>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col mb-3">
                                <label for="detailInfo">Detailed information <span class="text-muted">(Optional)</span></label>
                                <textarea class="form-control" id="detailInfo" rows="3"></textarea>
                            </div>
                        </div>
                        <hr class="mb-4">
                        {{!-- <h4 class="mb-3">User information</h4>
                        <div class="form-row">
                            <div class="col mb-3">
                                <label for="userName">User name <span class="text-muted">(Optional)</span></label>
                                <input type="text" class="form-control" id="userName" placeholder="User name">
                                <small id="userNameHelp" class="form-text text-muted">We'll never share your information with anyone else.</small>
                            </div>
                        </div> --}}
                        <div class="form-row">
                            <div class="col mb-3">
                                <label for="email">Email address <span class="text-muted">(Optional)</span></label>
                                <input type="text" class="form-control" id="email" placeholder="Email address">
                                <small id="email" class="form-text text-muted">Email information will only be used to reach you back when the quiz is ready.</small>
                            </div>
                        </div>
                        <br><br>
                        <button class="btn btn-lg btn-primary btn-block" id ="btn-request-send" type="submit">SEND</button>
                    </form>
                </div>
            </div>

            <br><br><br>
            
        </div>
        <br><br>
        <!-- Sticky footer -->
        <div id="footer-placeholder"></di1v>
    </main>

